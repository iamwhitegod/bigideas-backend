style.
 
  * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }

  html {
    font-size: 10px;
  }

  body {
    font-family: "Inter", sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 22px;
    color: #222237;
    background-color: #f5f5f5;
  }

  p {
    margin-bottom: 7px;
  }

  a {
    text-decoration: none;
  }

  .text--gradient {
    display: inline-block;
    color: linear-gradient(95.06deg, #ea5b0c -20.91%, #e71d73 94.91%);
    background-clip: text;
    -webkit-background-clip: text;
    -moz-background-clip: text;
    -ms-background-clip: text;
    color: transparent;
  }

  .fw--800 {
    font-weight: 800;
  }

  /*  */

  .container {
    max-width: 1000px;
    margin: auto;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .invite--img {
    max-width: 250px;
    margin: 48px auto;
  }

  .invite--img img {
    width: 100%;
  }

  .invite--info {
    margin-top: 25px;
    margin-bottom: 12px;
  }

  .big--ideas {
    max-width: 100px;
    margin-bottom: 14px;
    font-weight: 600;
  }

  .wrapper {
    max-width: 700px;
    margin: 0 auto;
  }

  .email--template {
    padding-top: 64px;
  }

  .email--template-img {
    max-width: 300px;
    width: 150px;
    margin-bottom: 6.4rem;
  }

  .email--template img {
    width: 100%;
    max-width: 300px;
    margin-bottom: 64px;
  }

  .votes--of--appreciation,
  .participant--details {
    margin-bottom: 32px;
  }

  .participants--info {
    font-weight: 600;
  }

  .verify--registration {
    font-weight: 800;
    margin-bottom: 9px;
  }

  .important--notes {
    max-width: 500px;
  }

  .points--to--note {
    font-weight: 600;
  }

  /*  */
  .learn-more {
    font-size: 14px;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;

    padding-top: 64px;
    padding-bottom: 54px;
  }

  .big--ideas {
    max-width: 100px;
    margin-bottom: 14px;
    font-weight: 600;
  }

  .footer--emphasis {
    font-weight: 800;
  }

  .footer__nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: center;
    gap: 0.8rem 1.6rem;
    text-align: center;
    margin-bottom: 1rem;
  }

  .footer__nav a {
    color: #222237;
    text-transform: uppercase;
  }

  .footer__nav a {
    margin-right: 12px;
  }

  footer {
    margin-top: 64px;
  }

  .footer--emphasis {
    font-weight: 800;
  }

  .footer__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-right: 12px
  }

  .footer__content {
    max-width: 429px;
    text-align: center;

    margin-bottom: 20px;
  }

  .footer__socials > *:not(:last-child) {
    margin-right: 12px;
  }

  .learn-more__text {
    max-width: 500px;
    line-height: 24px;
    margin-bottom: 16px;
  }

  .margin-btm-40 {
    margin-bottom: 40px;
  }




  @media only screen and (max-width: 700px) {
    .wrapper, 
    .container {
      padding: 24px;
    }
  }

  



    