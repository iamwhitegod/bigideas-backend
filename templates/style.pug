style.
 
  * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
    }

  html {
    font-size: 10px;
  }

  body {
    font-family: "Inter", sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 22px;
    color: #222237;
    background-color: #f5f5f5;
  }

  p {
    margin-bottom: 7px;
  }

  a {
    text-decoration: none;
  }

  .text--gradient {
    display: inline-block;
    color: linear-gradient(95.06deg, #ea5b0c -20.91%, #e71d73 94.91%);
    background-clip: text;
    -webkit-background-clip: text;
    -moz-background-clip: text;
    -ms-background-clip: text;
    color: transparent;
  }

  .fw--800 {
    font-weight: 800;
  }

  /*  */

  .wrapper {
    max-width: 700px;
    margin: 0 auto;
  }

  .email--template {
    padding-top: 64px;
  }

  .email--template-img {
    max-width: 300px;
    width: 150px;
    margin-bottom: 6.4rem;
  }

  .email--template img {
    width: 100%;
    max-width: 300px;
    margin-bottom: 64px;
  }

  .votes--of--appreciation,
  .participant--details {
    margin-bottom: 32px;
  }

  .participants--info {
    font-weight: 600;
  }

  .verify--registration {
    font-weight: 800;
    margin-bottom: 9px;
  }

  .important--notes {
    max-width: 500px;
  }

  .points--to--note {
    font-weight: 600;
  }

  /*  */
  .learn-more {
    font-size: 14px;

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;

    padding-top: 64px;
    padding-bottom: 54px;
  }

  .big--ideas {
    max-width: 100px;
    margin-bottom: 14px;
    font-weight: 600;
  }

  .footer--emphasis {
    font-weight: 800;
  }

  .footer__nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: center;
    gap: 0.8rem 1.6rem;
    text-align: center;
    margin-bottom: 1rem;
  }

  .footer__nav a {
    color: #222237;
    text-transform: uppercase;
  }

  .footer__nav a {
    margin-right: 12px;
  }

  .learn-more__text {
    max-width: 500px;
    line-height: 24px;
    margin-bottom: 16px;
  }

  @media only screen and (max-width: 700px) {
    .wrapper {
      padding: 24px;
    }
  }